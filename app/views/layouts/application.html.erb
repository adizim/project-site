<!DOCTYPE html>
<html>
  <head>
    <title>BIDS Project Site</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	  <!-- NAV -->
	  <nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to root_path, class: "navbar-brand" do %>

	      	BIDS

          <% end %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="main-nav-collapse">
	      <ul class="nav navbar-nav navbar-right">
	      	<li><%= link_to "Projects", projects_path %></li>
	      	<li><%= link_to "About", about_path %></li>
	      	<li><%= link_to "Contact", contact_path %></li>
	        <li><%= link_to "Apply", apply_path %></li>
            <li><%= link_to "Account", account_path%></li>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
  
    <%= yield %>

    <div class="footer">
    	<div class="footer_items container">
    		<div class="row">
    			<div class="col-md-3">
    				<h4>General</h4>
    				<ul>
	    				<li>Projects</li>
	    				<li>About</li>
	    				<li>Contact</li>
	    				<li>Apply</li>
    				</ul>
    			</div>
    			<div class="col-md-3">
    				<h4>Students</h4>
    				<ul>
	    				<li>Apply</li>
	    			</ul>
    			</div>
    			<div class="col-md-3">
    				<h4>Partners</h4>
    				<ul>
	    				<li>Apply</li>
	    			</ul>
    			</div>
    			<div class="col-md-3">
    			<form>
    				<div class="form-inline">
					    <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
    					<button type="button" class="btn btn-primary">Go</button>
    					<p class="help-block">Sign up for BIDS Newsletter here</p>
    				</div>
    			</form>
    			</div>
    		</div>
    	</div>
    	<div class="footer_links conatiner">
    	</div>
    </div>
  </body>
</html>

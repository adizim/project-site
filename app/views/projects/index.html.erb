<!-- Project header -->
<div class="container text-center">
	<h2>Projects</h2>

</div>
<!-- Project categories -->
<div class="container-fluid" style="padding: 10px">
	<div class="row text-center">

	    <div class="col-md-2 col-md-offset-1" style="border:2px solid #cecece">
			<h5><%= link_to "ALL PROJECTS", projects_path, class:'category'%></h5>
			
		</div>
	    <div class="col-md-2" style="border:2px solid #cecece; color:red">
			<h5><%= link_to "STARTUPS", projects_path(:category=>"Startups"), class: 'category'%></h5>
		</div>
	    <div class="col-md-2" style="border:2px solid #cecece">
	    	<h5><%= link_to "SOCIAL GOOD", projects_path(:category=>"Social Good"), class: 'category'%></h5>
	    </div>
	    <div class="col-md-2" style="border:2px solid #cecece">
	    	<h5><%= link_to "Research", projects_path(:category=>"Research"), class:'category'%></h5>
	    </div>
	    <div class="col-md-2" style="border:2px solid #cecece">
	    	<h5><%= link_to "PM/CONSULTING", projects_path(:category=>"PM/Consulting"), class:'category'%></h5>
	    </div>
	</div>
</div>

<!-- Container for Sidebar and Grid -->
<div class="container-fluid">
	<div class="row">
		<div class="col-md-3 col-md-offset-1">
		<!-- Sidebar -->
			<div class="sidebar">
				<form class="navbar-form" role="search">
   	 				<div class="input-group add-on">
      					<input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
  						<div class="input-group-btn">
        					<button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      					</div>
    				</div>
  				</form>
  				<div class="sidebar-group">
					<h5> Topics </h5>
					<div class="checkbox">
						<label><input type="checkbox" value="">Machine Learning</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" value="">Public Health</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" value="">Finance</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" value="">Artificial Intelligence</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" value="">Category</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" value="">Category</label>
					</div>
					<div class="checkbox">
						<label><input type="checkbox" value="">Category</label>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-7">
		<!-- Grid -->
			<div class="grid">
				<div class="row">
					<% @projects.each do |p| %>
						<div class="col-md-6">
							<div class="square">
								<%= image_tag(p.image, :alt => "project", :class => "img-thumbnail") %>
								<h4 class="text-center"><%= p.title %></h4>
								<p><%= p.summary %>
									<%= link_to 'Read more', p.link %></p>
									<%= p.category %>
								</p>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
